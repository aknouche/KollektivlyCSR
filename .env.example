# Kollektivly Environment Variables Template (Supabase Version)
# Copy this file to .env.local and fill in your values

# ==============================================
# SUPABASE (Database + Auth + Storage)
# ==============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ==============================================
# EMAIL SERVICE (Resend)
# ==============================================
# Sign up at: https://resend.com/signup
# Get API key from: Dashboard â†’ API Keys
RESEND_API_KEY=""

# Email sender (Supabase will send auth emails, Resend for admin notifications)
RESEND_FROM_EMAIL="noreply@kollektivly.se"

# ==============================================
# CONTENT MODERATION (Perspective API)
# ==============================================
# Sign up at: https://developers.perspectiveapi.com/s/docs-get-started
PERSPECTIVE_API_KEY=""

# ==============================================
# CAPTCHA (hCaptcha)
# ==============================================
# Sign up at: https://www.hcaptcha.com/signup-interstitial
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=""
HCAPTCHA_SECRET_KEY=""

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Your production domain
NEXT_PUBLIC_APP_URL="https://kollektivly-csr.vercel.app"

# Admin email for notifications
ADMIN_EMAIL="admin@kollektivly.se"

# Environment
NODE_ENV="development"
